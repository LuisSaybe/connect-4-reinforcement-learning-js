{
  "presets": ["@babel/preset-react"],
  "plugins": [
    [
      "react-css-modules",
      {
        "generateScopedName": "[path]___[name]__[local]",
        "filetypes": {
          ".scss": {
            "syntax": "postcss-scss",
            "plugins": ["postcss-nested"]
          }
        }
      }
    ]
  ]
}
